---
import '@styles/global.css';
import '@fontsource/ibm-plex-mono';
import '@fontsource/ibm-plex-sans';

type Props = {
  title: string;
  description?: string;
  type?: string;
  image?: string;
  date?: Date;
};

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/stewdio-pending-logo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | stewdio.dev</title>
  </head>
  <body>
    <slot />
  </body>
</html>
